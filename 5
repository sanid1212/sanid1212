$directory = "C:\path\to\your\config\files"; $pattern = '^(?:(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])|(?=.*[a-z])(?=.*[A-Z])(?=.*[\W_])|(?=.*[a-z])(?=.*[0-9])(?=.*[\W_])|(?=.*[A-Z])(?=.*[0-9])(?=.*[\W_])).{8,}$'; Get-ChildItem -Path $directory -Recurse -Include *.config | ForEach-Object { Select-String -Path $_.FullName -Pattern $pattern | ForEach-Object { Write-Output "Potential sensitive information found in file: $($_.Path)"; Write-Output "Line $($_.LineNumber): $($_.Line)" } }; pause
