$directory = "C:\path\to\your\config\files"; $pattern = '(?<=[=:()\[\]\{\}\"\''])[a-zA-Z0-9!@#\$%\^\&\*\(\)_\+\-=\[\]\{\};:"''\|\\,.<>\/?`~]{8,}(?=[\"\')])'; Get-ChildItem -Path $directory -Recurse -Include *.txt | ForEach-Object { Select-String -Path $_.FullName -Pattern $pattern | ForEach-Object { Write-Output "Potential sensitive information found in file: $($_.Path)"; Write-Output "Line $($_.LineNumber): $($_.Line.Trim())" } }; pause
