metadata:
  language: v1-beta
  name: "Scoped Path Fuzzer"
  description: "Fuzzes paths of URLs within the scope and checks for 200 OK responses."
  author: "Your Name"
  tags: "fuzzer", "path-fuzzing"

run for each:
  url = scope.urls

given request then
  define:
    wordlist_path = "C:/tools/big.txt"

  run for each:
    path = {read_file(wordlist_path).split("\n")}

    if {url} is in scope then
      send request:
        method: "GET"
        appending path: {path}
      
      if {latest.response.status_code} is "200" then
        report issue:
          severity: info
          confidence: certain
          detail: "Found a 200 OK response at path {path} on URL {url}"
